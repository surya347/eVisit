<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Required</fullName>
    <active>true</active>
    <description>Case is required for Case Record Type</description>
    <errorConditionFormula>AND(
 RecordType.DeveloperName = &apos;Case&apos;,
 ISBLANK(Case__c)
)</errorConditionFormula>
    <errorDisplayField>Case__c</errorDisplayField>
    <errorMessage>Case is required for Status Tracker</errorMessage>
</ValidationRule>
