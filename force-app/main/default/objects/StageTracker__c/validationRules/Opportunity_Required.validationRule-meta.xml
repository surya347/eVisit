<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_Required</fullName>
    <active>true</active>
    <description>Opportunity Required for Opportunity Record Type</description>
    <errorConditionFormula>AND(
 RecordType.DeveloperName = &apos;Opportunity&apos;,
 ISBLANK( Opportunity__c )
)</errorConditionFormula>
    <errorDisplayField>Opportunity__c</errorDisplayField>
    <errorMessage>An Opportunity is Required to Capture the Stage</errorMessage>
</ValidationRule>
